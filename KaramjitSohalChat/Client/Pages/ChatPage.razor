@page "/Chat"


@using Microsoft.AspNetCore.SignalR.Client
@inject NavigationManager NavigationManager
@implements IAsyncDisposable
<h3>ChatPage</h3>
<div class="form-group">
    <label>
        Username:
        <input @bind="userInput" disabled="@(!IsConnected)" maxlength="63"/>
        
    </label>
</div>
<div class="form-group">
    <label>
        Message:
        <input @bind="messageInput" disabled="@(!IsConnected)" size="50" @onclick="(e) => SendTyping()"/>
    </label>
</div>
<button @onclick="Send" disabled="@(!IsConnected)">Send</button>
<p>@userTyping</p>

<hr>

<ul id="messagesList">
    @foreach (var message in messages)
    {
        <li>@message</li>
    }
</ul>

@code {
    private HubConnection hubConnection;
    private List<string> messages = new List<string>();
    private string userInput;
    private string messageInput;
    private string userTyping;

    protected override async Task OnInitializedAsync()
    {
        hubConnection = new HubConnectionBuilder()
            .WithUrl(NavigationManager.ToAbsoluteUri("/chathub"))
            .Build();

        hubConnection.On<string, string>("ReceiveMessage", (user, message) =>
        {
            var encodedMsg = $"{user}: {message}";
            messages.Add(encodedMsg);
            StateHasChanged();
        });

        hubConnection.On<string>("UserTyping", (user) =>
        {
            var encodedMsg = $"{user} is typing a message...";
            userTyping = encodedMsg;
            StateHasChanged();
        });

        await hubConnection.StartAsync();
    }

    async Task SendTyping(){
        
        if (userInput != "" && userInput != null){
            await hubConnection.SendAsync("SendTyping", userInput);
        }
    }

    async Task Send() =>
        await hubConnection.SendAsync("SendMessage", userInput, messageInput);

    public bool IsConnected =>
        hubConnection.State == HubConnectionState.Connected;

    public async ValueTask DisposeAsync()
    {
        if (hubConnection is not null)
        {
            await hubConnection.DisposeAsync();
        }
    }
}
